{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "resources/*"
      ]
    },
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "include": [
    "resources/**/*.vue",
    "resources/**/*.ts",
    "resources/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}